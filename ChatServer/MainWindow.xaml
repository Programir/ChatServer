<Window x:Class="ChatServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatServer"
        mc:Ignorable="d"
        Title="Сервер простого текстового чата" Height="500" Width="525">
    <Grid Margin="2,6,27,-95">


        <TextBlock TextWrapping="Wrap" TextAlignment="Center"  Margin="80,11,62,252.18">
        <Run FontSize="16" Foreground="Black" FontWeight="Bold">Сервер простого текстового чата</Run>
        </TextBlock>

        <Button x:Name="StartButton" Content="Запуск сервера" IsDefault="True" Click="Start_Button_Click" Height="30" Margin="393,77,-17,452" />

        <Button x:Name="StopButton" Content="Остановка сервера" Click="Stop_Button_Click" Margin="393,123,-17,404" RenderTransformOrigin="0.464,0.105" />

        <Button x:Name="ExitButton" Content="Выход" IsCancel="True" Click="Exit_Button_Click" Margin="394,227,-16,300" RenderTransformOrigin="0.464,0.105" />

        <ListBox Name="UserList" Margin="2,54,111,273">
            <TextBlock FontWeight="Bold" TextDecorations="Underline" Text="Список пользователей чата:" />
        </ListBox>

        <Button x:Name="CreateUserButton" Content="Новый пользователь" Click="Create_User_Button_Click" Margin="10,297,352,230" RenderTransformOrigin="0.464,0.105" />

        <Button x:Name="ChangeUserButton" Content="Изменить пользователя" Click="Change_User_Button_Click" Margin="168,297,180,230" RenderTransformOrigin="0.464,0.105" />

        <Button x:Name="DeleteUserButton" Content="Удалить пользователя" Click="Delete_User_Button_Click" Margin="334,297,22,230" RenderTransformOrigin="0.464,0.105" />

        <TextBlock TextWrapping="Wrap" TextAlignment="Center"  Margin="3,337,386,198">
        <Run FontSize="16" Foreground="Black" FontWeight="Bold">Логин:</Run>
        </TextBlock>

        <TextBox MaxLength="20" TextWrapping="Wrap" TextChanged="User.Login" Margin="131,338,162,194" RenderTransformOrigin="0.403,0.383"/>

        <TextBlock TextWrapping="Wrap" TextAlignment="Center"  Margin="5,374,384,161">
        <Run FontSize="16" Foreground="Black" FontWeight="Bold">Пароль:</Run>
        </TextBlock>

        <TextBox MaxLength="20" TextWrapping="Wrap" TextChanged="Input_TextBox_Password" Margin="131,373,162,159" RenderTransformOrigin="0.403,0.383"/>

        <TextBlock TextWrapping="Wrap" TextAlignment="Center"  Margin="12,410,377,125">
        <Run FontSize="16" Foreground="Black" FontWeight="Bold">Эл. почта:</Run>
        </TextBlock>

        <TextBox MaxLength="20" TextWrapping="Wrap" TextChanged="Input_TextBox_Email" Margin="132,408,161,124" RenderTransformOrigin="0.403,0.383"/>


    </Grid>
</Window>
